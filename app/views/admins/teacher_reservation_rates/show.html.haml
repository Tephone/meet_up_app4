%h2 #{@teacher.name}さん
%p #{Date.current.month}月の予約率: #{reservation_rate(@teacher.lessons.for_month(Date.current))}%
%p ※測定不能の場合「--」と表示
%table
  - days_of_week.each do |day|
    %th= day
  - weeks_in_this_month.each do |week|
    %tr
      - week.each do |date|
        - if date == Date.current.beginning_of_month
          - date.wday.times do
            %td
        %td
          %p= date.day
          %p #{reservation_rate(@teacher.lessons.for_day(date))}%
